<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/deep_gray">


        <ImageButton
            android:id="@+id/uc_img_nav_left"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:src="@drawable/nav_icon_menu" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/uc_nav_layout_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@null"
                android:orientation="vertical"
                android:src="@drawable/nav_icon_search" />

            <TextView
                android:id="@+id/uc_nav_layout_right"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/background_today"
                android:gravity="center"
                android:text="23"
                android:textColor="@color/yellow"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>